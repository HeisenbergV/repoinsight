database:
  host: db
  port: 5432
  user: postgres
  password: postgres
  name: repoinsight

api:
  github:
    token: your_github_token
  deepseek:
    api_key: your_deepseek_api_key
    base_url: https://api.deepseek.com/v1/chat/completions
    interval: 5  # 分析间隔（分钟）
  wechat:
    app_id: your_wechat_app_id
    app_secret: your_wechat_app_secret
    template_id: your_template_id  # 消息模板ID
    push_interval: 24  # 推送间隔（小时）

app:
  search_keyword: "language:go stars:>100"
  interval_hours: 24
  max_repos_per_page: 100
  port: 8080

log:
  level: info
  format: json
  output: file
  file:
    path: logs
    name: repoinsight.log
    max_size: 100    # MB
    max_backups: 3
    max_age: 28      # 天
    compress: true 